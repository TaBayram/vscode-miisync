{
  "name": "miisync",
  "displayName": "MII Sync",
  "description": "Sync projects in MII server",
  "publisher": "TaBayramNTT",
  "author": {
    "name": "TaBayramNTT",
    "url": "https://github.com/TaBayramNTT"
  },
  "repository": {
    "url": "https://github.com/TaBayramNTT/miisync",
    "type": "github"
  },
  "icon": "resources/icon.png",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sync",
    "remote",
    "mii",
    "workbench",
    "ntt"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.vscode/miisync.json"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "miisync.createconfig",
        "title": "Create Config",
        "category": "MIISYNC"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "/miisync.json",
        "url": "./schema/schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.16",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "joi": "^17.9.1",
    "node-fetch": "^2.6.9"
  }
}
