{
  "name": "miisync",
  "displayName": "MII Sync",
  "description": "Sync projects in MII server",
  "publisher": "TaBayramNTT",
  "author": {
    "name": "TaBayramNTT",
    "url": "https://github.com/TaBayramNTT"
  },
  "repository": {
    "url": "https://github.com/TaBayramNTT/miisync",
    "type": "github"
  },
  "icon": "resources/icon.png",
  "version": "0.5.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sync",
    "remote",
    "mii",
    "workbench",
    "ntt"
  ],
  "activationEvents": [
    "workspaceContains:.vscode/miisync.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "miisync.createconfig",
        "title": "Create Config",
        "category": "mii"
      },
      {
        "command": "miisync.disablesyncsave",
        "title": "Disable Sync Save",
        "category": "mii",
        "enablement": "miisync.enabled"
      },
      {
        "command": "miisync.enablesyncsave",
        "title": "Enable Sync Save",
        "category": "mii",
        "enablement": "miisync.enabled"
      },
      {
        "command": "miisync.uploadfile",
        "title": "Upload Current File",
        "category": "mii",
        "enablement": "editorIsOpen && miisync.enabled"
      },
      {
        "command": "miisync.downloadfile",
        "title": "Download Current File",
        "category": "mii",
        "enablement": "miisync.enabled"
      },
      {
        "command": "miisync.downloadfolder",
        "title": "Download Folder",
        "category": "mii",
        "enablement": "miisync.enabled",
        "when": false
      },
      {
        "command": "miisync.openscreen",
        "title": "Open Current Screen",
        "category": "mii",
        "enablement": "miisync.enabled"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "miisync.downloadfile",
          "group": "miisync",
          "when": "miisync.enabled && !explorerResourceIsRoot && !explorerResourceIsFolder"
        },
        {
          "command": "miisync.downloadfolder",
          "group": "miisync",
          "when": "miisync.enabled && !explorerResourceIsRoot && explorerResourceIsFolder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "miisyncbar",
          "title": "Mii Sync",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "miisyncbar": [
        {
          "id": "remotedirectory",
          "name": "Remote Directory",
          "when": "miisync.enabled"
        },
        {
          "id": "fileproperties",
          "name": "File Properties",
          "when": "miisync.enabled"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": "/miisync.json",
        "url": "./schema/schema.json"
      }
    ],
    "configuration": {
      "title": "MII Sync",
      "properties": {
        "useRootConfig": {
          "type": "boolean",
          "default": false,
          "description": "Gets the config from specified miisync.json file."
        },
        "rootConfig": {
          "type": "string",
          "default": "10.20.30.40",
          "description": "Gets the config from specified miisync.json file."
        },
        "host": {
          "type": "string",
          "default": "10.20.30.40",
          "description": "IP of the target MII system."
        },
        "port": {
          "type": "number",
          "default": 50000,
          "description": "Port of the target MII system."
        },
        "username": {
          "type": "string",
          "default": "x-name",
          "description": ""
        },
        "password": {
          "type": "string",
          "default": "1234",
          "description": ""
        },
        "context": {
          "type": "string",
          "default": "1234",
          "description": "starting folder name to send"
        },
        "removeFromContext": {
          "type": "array",
          "default": [
            "webapp"
          ],
          "items": {
            "type": "string"
          },
          "description": "any folder that is between file name and context that you want to remove"
        },
        "remotePath": {
          "type": "string",
          "default": "/",
          "description": "path of the target system"
        },
        "uploadOnSave": {
          "type": "boolean",
          "default": true
        },
        "ignore": {
          "type": "array",
          "default": [
            ""
          ],
          "items": {
            "type": "string"
          },
          "description": "files to ignore"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.16",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "fast-xml-parser": "^4.2.0",
    "joi": "^17.9.1",
    "node-fetch": "^2.6.9"
  }
}