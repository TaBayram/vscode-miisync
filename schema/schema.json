{
    "properties": {
        "systems": {
            "type": "array",
            "items": {
                "type": "object",
                "minItems": 1,
                "properties": {
                    "name": {
                        "type": "string",
                        "default": "dev",
                        "description": "name of the system"
                    },
                    "isMain": {
                        "type": "boolean",
                        "default": false,
                        "description": "If true the extension will use this system"
                    },
                    "host": {
                        "type": "string",
                        "default": "10.20.30.40",
                        "description": "IP of the target system."
                    },
                    "port": {
                        "type": "number",
                        "default": 50000,
                        "description": "Port of the target system."
                    },
                    "username": {
                        "type": "string",
                        "default": "x-name",
                        "description": "Your username for the target system"
                    },
                    "password": {
                        "type": "string",
                        "default": "1234",
                        "description": "Your password for the targetsystem"
                    }
                }
            }
        },
        "context": {
            "type": "string",
            "description": "starting folder name to send"
        },
        "removeFromContext": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "any folder that is between file name and context that you want to remove"
        },
        "remotePath": {
            "type": "string",
            "description": "path of the target system \n Example: localFile: x/y/c/zz/controller/main.controller.js \n remoteFile: y/c/controller/main.controller.js \n "
        },
        "ignore": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "useRootConfig": {
            "type": "boolean",
            "description": "Enables use of root config."
        },
        "rootConfig": {
            "type": "string",
            "description": "Gets the config from other miisync.json file. Can be relative or absolute path. \nMust point to where .vscode is located"
        },
        "uploadOnSave": {
            "type": "boolean",
            "description": "Uploads the current file to the system whenever you save it."
        },
        "downloadOnOpen": {
            "type": "boolean",
            "description": "Downloads the file to the system whenever you open it."
        }
    }
}